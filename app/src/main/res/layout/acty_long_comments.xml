<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/comments_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/comments_empty_layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:paddingBottom="21dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/comments_empty_iv"
            android:layout_width="111dip"
            android:layout_height="111dip"
            android:background="@null"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:src="@mipmap/dark_comment_empty" />

        <TextView
            android:id="@+id/comments_empty_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comments_empty_iv"
            android:layout_marginTop="11dip"
            android:text="暂无评论"
            android:layout_centerHorizontal="true"
            android:textColor="#ffa8a8a8"
            android:textSize="17sp" />
    </RelativeLayout>

</RelativeLayout>